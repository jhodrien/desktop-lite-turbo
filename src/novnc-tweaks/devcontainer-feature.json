{
    "name": "noVNC tweaks",
    "id": "novnc-tweaks",
    "version": "1.0.0",
    "description": "A feature to adjust noVNC",
    "options": {
        "autoconnect": {
            "type": "boolean",
            "default": true,
            "description": "Should noVNC autoconnect"
        },
        "resize": {
            "type": "string",
            "enum": [
                "none",
                "remote",
                "scale"
            ],
            "default": "remote",
            "description": "Choose how resizing should be handled"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/desktop-lite"
    ]
}
